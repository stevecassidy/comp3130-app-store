{
	"env": {
		"browser": true,
		"es2021": true,
		"node": true
	},
	"extends": [
		"eslint:recommended",
		"plugin:@typescript-eslint/recommended",
		"plugin:@typescript-eslint/recommended-requiring-type-checking",
		"airbnb-typescript",
		"prettier"
	],
	"plugins": ["@typescript-eslint"],
	"parser": "@typescript-eslint/parser",
	"overrides": [],
	"parserOptions": {
		"project": "./tsconfig.json",
		"tsconfigRootDir": "__dirname"
	},
	"rules": {
		"indent": ["error", 4]
	}
}
